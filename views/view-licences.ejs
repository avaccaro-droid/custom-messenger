		    	<th style="text-align:left">User limit</th>
		    	<th style="text-align:left">Expiry date</th>
		    	<th style="text-align:left">Created on</th>
		  	</tr>
		  	<% licences.forEach(function(licence) { %>
		  	<tr class="lunaRows">
		  		<td><%= licence.licenceId %></td>
	  			<td><%= licence.appId %></td>
	  			<td><%= licence.userLimit %></td>
	  			<td><%= licence.expiryDate %></td>
	  			<td><%= licence.createdOn %></td>
		  	</tr>
